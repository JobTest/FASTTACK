<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
        logicalFilePath="update2018-10-22_add_card_product.xml">

    <changeSet id="update2018-10-22_create_table_card_product_oracle" author="a.lazarchuk" runOnChange="true" context="oracle">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="CARD_PRODUCT"/>
            </not>
        </preConditions>
        <createTable tableName="CARD_PRODUCT">
            <column name="PRODUCT_CONFIG_ID" type="VARCHAR(10)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="BEGIN_RANGE" type="NUMBER(19)" />
            <column name="END_RANGE" type="NUMBER(19)" />
        </createTable>
    </changeSet>

</databaseChangeLog>